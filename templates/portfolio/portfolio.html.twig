{% extends 'base.html.twig' %}
{% block seo %}
  <title>Be for you home</title>
  <meta name="description" content="Be for you home">
  <meta name="keywords" content="mots-clés, optimisé SEO, exemple">
{% endblock %}




{% block main %}

  <main>

    <section class="pt-150 pb-130 portfolio-v2">
      <div class="container">
        <div class="row">
          <div class="col-xxl-8 col-xl-7 col-lg-6 col-md-6">
            <div class="sec-title-wrapper">
              <h2 class="sec-title-2 animation__char_come" style="color: darkblue">Nos <br> Réalisations Clés</h2>
            </div>
          </div>
          <div class="col-xxl-4 col-xl-5 col-lg-6 col-md-6">
            <div class="blog__text">
              <p>À travers nos projets, nous donnons vie à des solutions innovantes et impactantes, conçues pour répondre aux défis de nos clients et surpasser leurs attentes.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Début de la section Portfolio -->
    <section class="portfolio__area pb-140">
      <div class="container">
        <div class="row top_row">

          <h2 class="portfolio__text">Réalisations</h2>
          <div class="portfolio__list-1">
            {% for realisation in all_realisations %}
            <div class="portfolio__item">
              {% for image in realisation.images %}
                {% if image.dimension == 'affiche' %}
                <a href="{{ path('app_portfolio_detail', {'slug':realisation.slug}) }}">
                  <img class="mover" src="{{ asset('uploads/realisations/' ~ image.image) }}"
                                                                  alt="Image du Portfolio">
                </a>
                {% endif %}
              {% endfor %}
              <div class="portfolio__info">
                <h3 class="portfolio__title">{{ realisation.client }}</h3>
                <p>{{ realisation.deliveryAt | date('d-m-y') }}</p>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </section>
    <!-- Fin de la section Portfolio -->

    <!-- Début de la section CTA -->
    <section class="cta__area">
      <div class="container line pt-140 pb-110">
        <div class="line-3"></div>
        <div class="row">
          <div class="col-xxl-12">
            <div class="cta__content">
              <p class="cta__sub-title">Travailler avec nous</p>
              <h2 class="cta__title title-anim">Nous aimerions en savoir plus sur votre projet</h2>
              <div class="btn_wrapper">
                <a href="{{ path('app_contact') }}" class="wc-btn-primary btn-hover btn-item"><span></span>Discutons-en <i
                          class="fa-solid fa-arrow-right"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Fin de la section CTA -->



  </main>


{% endblock %}



  {% block modal_testimonial %}
  {% endblock %}
{% block java_script %}
  {{ parent() }}
  <script>
    let header_bg_2 = document.querySelector(".header__area-2");
    if (header_bg_2) {
      header_bg_2.style.background = "#071c45";
      window.onscroll = function () {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
          header_bg_2.style.background = "#071c45";
          header_bg_2.classList.add("sticky-2");
          if (scroll_top) {
            scroll_top.style.display = "block";
          }
        } else {
          header_bg_2.style.background = "#071c45";
        }
      };
    }
  </script>
{% endblock %}
